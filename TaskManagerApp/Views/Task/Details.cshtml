@model TaskManagerApp.Models.UpdateTaskViewModel;
@{
}

<h1>Edit Task</h1>
<form method="post" asp-action="Update" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label" asp-for="Id">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label" asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>
    <div class="mb-3">
        <label for="" class="form-label" asp-for="Content">Content</label>
        <input type="text" class="form-control" asp-for="Content">
    </div>
    <div class="mb-3">
        <label for="" class="form-label" asp-for="Status">Status</label>
        <select class="form-select" aria-label="Disabled select example" asp-for="Status">
            <option selected>Select Status</option>
            <option value="@TaskManagerApp.Models.Domain.TaskStatus.ToDo">To Do</option>
            <option value="@TaskManagerApp.Models.Domain.TaskStatus.InProgress">In Progress</option>
            <option value="@TaskManagerApp.Models.Domain.TaskStatus.Complete">Complete</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Task">Delete</button>
</form>