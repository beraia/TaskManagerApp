@using TaskManagerApp.Models.Domain;
@model List<TaskManagerApp.Models.Domain.Task>;
@{
}

<h1>Tasks</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Status</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Content</td>
                <td>@task.Status</td>
                <td><a href="View/@task.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>